<style>


    .ec-product-inner .ec-pro-content .ec-pro-title {
        font-size: 10px !important;
        margin: 0 0 7px;
    }

</style> 

<!-- Product tab Area Start -->
    <section class="section ec-product-tab section-space-p" id="collection">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="section-title">
                        <h2 class="ec-bg-title">Our Top Collection</h2>
                        <h2 class="ec-title">Our Top Collection</h2>
                        <p class="sub-title">Browse The Collection of Top Products</p>
                    </div>
                </div>

            
            </div>
            <div class="row">
                <div class="col">
                    <div class="tab-content">
                        <!-- 1st Product tab start -->
                        <div class="tab-pane fade show active" id="tab-pro-for-all">
                            <div class="row">
                                <!-- Product Content -->
                            @model IEnumerable<Ekka_Shopping.Models.Product>


                        



@{
    ViewBag.Title = "Products";
}


    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6 mb-6 ec-product-content" data-animation="fadeIn">
            <div class="ec-product-inner">
                <div class="ec-pro-image-outer">
                    <div class="ec-pro-image">
                        <a href="product-details-url" class="image">
                            <img class="main-image" src="~/@Url.Content(product.Pro_Image)" alt="@product.Pro_Name" />
                            <img class="hover-image" src="~/@Url.Content(product.Pro_Image)" alt="@product.Pro_Name" />
                        </a>
                        <span class="percentage">20%</span>
                        <a href="#" class="quickview" data-link-action="quickview" title="Quick view" data-bs-toggle="modal" data-bs-target="#ec_quickview_modal"><i class="fi-rr-eye"></i></a>
                        <div class="ec-pro-actions">
                            <a href="compare.html" class="ec-btn-group compare" title="Compare"><i class="fi fi-rr-arrows-repeat"></i></a>
                            <button title="Add To Cart" class="add-to-cart"><i class="fi-rr-shopping-basket"></i> Add To Cart</button>
                            <a class="ec-btn-group wishlist" title="Wishlist"><i class="fi-rr-heart"></i></a>
                        </div>
                    </div>
                </div>

                

                <div class="ec-pro-content">
                    <h5 class="ec-pro-title">Name: <a href="product-details-url">@product.Pro_Name</a></h5>
                                            <h4 class="ec-pro-title">Subcategory: <a href="product-details-url">@product.Subcategory.subcategory_name</a></h4>
                                            <h4 class="ec-pro-title">Category: <a href="product-details-url">@product.Subcategory.Category.Category_Name</a></h4>

                    <div class="ec-pro-rating">
                        <i class="ecicon eci-star fill"></i>
                        <i class="ecicon eci-star fill"></i>
                        <i class="ecicon eci-star fill"></i>
                        <i class="ecicon eci-star fill"></i>
                        <i class="ecicon eci-star"></i>
                    </div>
                    <span class="ec-price">
                        <span class="old-price">$27.00</span>
                        <span class="new-price">@product.Pro_Price.ToString("C")</span>
                    </span>
                
                </div>
            </div>
        </div>
    }


                                <div class="col-sm-12 shop-all-btn"><a href="shop-left-sidebar-col-3.html">Shop All
                                        Collection</a></div>
                            </div>
                        </div>
                     
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ec Product tab Area End -->