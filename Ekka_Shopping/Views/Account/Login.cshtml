<!-- Ec login page -->
<section class="ec-page-content section-space-p">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="section-title">
                    <h2 class="ec-bg-title">Log In</h2>
                    <h2 class="ec-title">Log In</h2>
                    <p class="sub-title mb-3">Best place to buy and sell digital products</p>
                </div>
            </div>

            @model User
            <div class="ec-login-wrapper">
                <div class="ec-login-container">
                    <div class="ec-login-form">
                        <form asp-action="Login" asp-controller="Account" method="post">
                            <span class="ec-login-wrap">
                                <label>Email Address*</label>
                                <input type="text "asp-for="UserEmail" placeholder="Enter your email add..." required />
                            </span>
                            <span class="ec-login-wrap">
                                <label>Password*</label>
                                <input type="password" asp-for="UserPassword" placeholder="Enter your password" required />
                            </span>
                            <span class="ec-login-wrap ec-login-fp">
                                <label><a href="#">Forgot Password?</a></label>
                            </span>
                            <span class="ec-login-wrap ec-login-btn">
                                <button class="btn btn-primary" type="submit">Login</button>
                                <a asp-action="SignUp" class="btn btn-secondary">Register</a>
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@{
    var LoginSuccess = TempData["LoginSuccess"] as string;
    var LoginError = TempData["LoginError"] as string;
    var SignUpSuccess = TempData["SignUpSuccess"] as string;

}

@if (!string.IsNullOrEmpty(LoginError))
{
    <script>
        Swal.fire({
            title: "Error",
            icon: "error",
            text: "@LoginError",
            timer: 3000
        });
    </script>
}




@if (!string.IsNullOrEmpty(LoginSuccess))
{
    <script>
        Swal.fire({
            title: "Success",
            icon: "success",
            text: "@LoginSuccess",
            timer: 3000
        });
    </script>
}


@if (!string.IsNullOrEmpty(SignUpSuccess))
{
    <script>
        Swal.fire({
            title: "Success",
            icon: "success",
            text: "@SignUpSuccess",
            timer: 3000
        });
    </script>
}

