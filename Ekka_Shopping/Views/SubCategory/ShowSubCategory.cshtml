    </script>
}

@if (!string.IsNullOrEmpty(Subcategory_Update_Error))
{
    <script>
        Swal.fire({
            title: "Error",
            icon: "error",
            text: "@Subcategory_Update_Error"
        }).then(() => {
            window.location.href = '@Url.Action("ShowSubCategory", "Subcategory")';
        });
    </script>
}
