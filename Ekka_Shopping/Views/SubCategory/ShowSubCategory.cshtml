            icon: "error",
            text: "@Subcategory_Delete_Error"
        }).then(() => {
            window.location.href = '@Url.Action("ShowSubCategory", "Subcategory")';
        });
    </script>
}

@if (!string.IsNullOrEmpty(Subcategory_Update_Success))
{
    <script>
        Swal.fire({
            title: "Success",
