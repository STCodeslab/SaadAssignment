@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Subcategory Update Form";
}

<!-- Row start -->
<!-- Heading start -->
<div class="card-header">
    <h2 class="text-center">Subcategory Update Form</h2>
</div>
<!-- Heading end -->
<div class="row gx-3 justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body">
                <!-- Row start -->
                @model Ekka_Shopping.Models.Subcategory

                <form class="row g-3" asp-action="UpdateSubcategory" method="POST" asp-controller="Subcategory">
                    <div class="col-12">
                        <input type="hidden" class="form-control"
                               placeholder="Enter Subcategory Name..." asp-for="subcategory_id" required />
                        <label for="inputAddress2" class="form-label">Subcategory Name</label>
                        <input type="text" class="form-control" id="inputAddress2"
                               placeholder="Enter Subcategory Name..." asp-for="subcategory_name" onkeyup="validateSubcategoryName()" required />
                        <!-- Display error message in this div -->
                        <div id="subcategoryNameError" class="text-danger"></div>
                    </div>
                    <div class="col-12">
                        <label for="inputSubcategoryId" class="form-label">Category ID</label>
                        <select class="form-select" asp-for="category_id" asp-items="ViewBag.Category" required>
                            <option selected disabled>Choose...</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-center gap-2 text-center">
                        <button type="submit" class="btn btn-outline-secondary">
                            Update Subcategory
                        </button>
                        <a type="button" class="btn btn-outline-success" asp-action="Index" asp-controller="Admin">
                            Cancel
                        </a>
                    </div>
                </form>
                <!-- Row end -->
            </div>
        </div>
    </div>
</div>
<!-- Row end -->

<script>
    function validateSubcategoryName() {
        var subcategoryNameInput = document.getElementById("inputAddress2");
        var subcategoryNameValue = subcategoryNameInput.value;
        var subcategoryNameErrorDiv = document.getElementById("subcategoryNameError");

        // Use a regular expression to check if the input contains only alphabets
        var isValid = /^[A-Za-z]+$/.test(subcategoryNameValue);

        if (!isValid) {
            // Display an error message in the div
            subcategoryNameErrorDiv.innerText = "Please enter only alphabets without spaces.";

            // Clear the input field or prevent non-alphabetic characters
            subcategoryNameInput.value = subcategoryNameValue.replace(/[^A-Za-z]/g, '');
        } else {
            // Clear the error message when input is valid
            subcategoryNameErrorDiv.innerText = "";
        }
    }
</script>
