@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Role Delete Form";
}

<!-- Row start -->
<!-- Heading start -->
<div class="card-header">
    <h2 class="text-center">Role Delete</h2>
</div>
<!-- Heading end -->
<div class="row gx-3 justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body">
                <!-- Row start -->
                @model Ekka_Shopping.Models.Role

                <form class="row g-3" asp-action="DeleteRole" method="POST" asp-controller="Role">
                    <div class="col-12">
                        <input type="hidden" class="form-control" id="inputAddress2"
                               placeholder="Enter Role Name..." asp-for="RoleId" readonly />
                        <label for="inputAddress2" class="form-label">Role Name</label>
                        <input type="text" class="form-control" id="inputAddress2"
                               placeholder="Enter Role Name..." asp-for="RoleName" readonly />
                        <!-- Display error message in this div -->
                        <div id="roleNameError" class="text-danger"></div>
                    </div>
                    <div class="d-flex justify-content-center gap-2 text-center">
                        <button type="submit" class="btn btn-outline-secondary">
                            Delete Role
                        </button>
                        <a type="button" class="btn btn-outline-success" asp-action="Index" asp-controller="Admin">
                            Cancel
                        </a>
                    </div>
                </form>
                <!-- Row end -->
            </div>
        </div>
    </div>
</div>
<!-- Row end -->
