@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Role Form";
}

<!-- Row start -->
<!-- Heading start -->
<div class="card-header">
    <h2 class="text-center">Role Add Form</h2>
</div>
<!-- Heading end -->
<div class="row gx-3 justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body">
                <!-- Row start -->
                @model Ekka_Shopping.Models.Role

                <form class="row g-3" asp-action="AddRole" asp-controller="Role" method="POST">
                    <div class="col-12">
                        <label for="inputAddress2" class="form-label">Role Name</label>
                        <input type="text" class="form-control" id="inputAddress2"
                               placeholder="Enter Role Name..." asp-for="RoleName" onkeyup="validateRoleName()" required />
                        <!-- Display error message in this div -->
                        <div id="roleNameError" class="text-danger"></div>
                    </div>
                    <div class="d-flex justify-content-center gap-2 text-center">
                        <button type="submit" class="btn btn-outline-secondary">
                            Add Role
                        </button>
                        <a type="button" class="btn btn-outline-success" asp-action="Index" asp-controller="Admin">
                            Cancel
                        </a>
                    </div>
                </form>
                <!-- Row end -->
            </div>
        </div>
    </div>
</div>
<!-- Row end -->

<script>
    function validateRoleName() {
        var roleNameInput = document.getElementById("inputAddress2");
        var roleNameValue = roleNameInput.value;
        var roleNameErrorDiv = document.getElementById("roleNameError");

        // Use a regular expression to check if the input contains only alphabets
        var isValid = /^[A-Za-z]+$/.test(roleNameValue);

        if (!isValid) {
            // Display an error message in the div
            roleNameErrorDiv.innerText = "Please enter only alphabets without spaces.";

            // Clear the input field or prevent non-alphabetic characters
            roleNameInput.value = roleNameValue.replace(/[^A-Za-z]/g, '');
        } else {
            // Clear the error message when input is valid
            roleNameErrorDiv.innerText = "";
        }
    }
</script>
