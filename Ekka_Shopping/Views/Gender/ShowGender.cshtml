            text: "@Gender_Delete_Error"
        }).then(() => {
            window.location.href = '@Url.Action("ShowGender", "Gender")';
        });
    </script>
}

@if (!string.IsNullOrEmpty(Gender_Update_Success))
{
    <script>
        Swal.fire({
            title: "Success",
